<%- include('./partials/admin_header') -%>
<div class="faculty-main-box">
    <div class="dashboard-nav"> 
        <div class="dashboard-nav-icon">
            <i class="fa-solid fa-circle-chevron-down"></i>
        </div>
        <div class="faculty-nav-head">
            <h2>Faculty Dashboard</h2>
        </div>
    </div>
    <div class="faculty_menu col-2">
        <div class="faculty_menu_items">
            <a href="faculty_dashboard.ejs"> Profile</a><br>
            <a href="update_faculty_experience.ejs"> Experiences</a><br>
            <a href="#"> Awards</a><br>
            <a href="#"> Qualifications</a><br>
            <a href="#"> Publications</a><br>
            <a href="/logout"> Logout</a><br>
        </div>
    </div> 

    <div class="update_details">
        <div class="basic-header">
            <h5>View and Update Experiences</h5>
        </div>
        <form action="/upload">
            
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" value="<%= props.name%>" readonly>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" value="<%= props.email%>" readonly>
            </div>
            
            
            <button type="submit" class="btn btn-primary">UPDATE DETAILS</button>
        </form>
    </div>
</div>
<%- include('./partials/footer') -%>